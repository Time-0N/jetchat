# Production Environment Variables Example for JetChat
# Copy this file to .env.prod and update the values for your deployment

# Rails Configuration
RAILS_ENV=production
SERVER_PORT=5000
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Database URLs for Rails multi-database setup
# For local Docker deployment:
DATABASE_URL=postgres://modul_223:postgres@postgres:5432/modul_223_production
CACHE_DATABASE_URL=postgres://modul_223:postgres@postgres:5432/modul_223_production_cache
QUEUE_DATABASE_URL=postgres://modul_223:postgres@postgres:5432/modul_223_production_queue
CABLE_DATABASE_URL=postgres://modul_223:postgres@postgres:5432/modul_223_production_cable

# For Koyeb deployment, use format:
# DATABASE_URL=postgresql://admin:your_password@your_host.eu-central-1.pg.koyeb.app/jetchat-prod
# CACHE_DATABASE_URL=postgresql://admin:your_password@your_host.eu-central-1.pg.koyeb.app/jetchat_prod_cache
# QUEUE_DATABASE_URL=postgresql://admin:your_password@your_host.eu-central-1.pg.koyeb.app/jetchat_prod_queue
# CABLE_DATABASE_URL=postgresql://admin:your_password@your_host.eu-central-1.pg.koyeb.app/jetchat_prod_cable

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_DB=modul_223_production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
MODUL_223_DATABASE_PASSWORD=postgres

# Zitadel OAuth Configuration
ZITADEL_ISSUER=https://jetchat-5jjotf.us1.zitadel.cloud
ZITADEL_CLIENT_ID=your_client_id

# Rails Security Keys
RAILS_MASTER_KEY=your_master_key
SECRET_KEY_BASE=your_secret_key_base