# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Zitadel Configuration (already configured in docker-compose)
ZITADEL_ISSUER=https://jetchat-5jjotf.us1.zitadel.cloud/
ZITADEL_CLIENT_ID=339386197019301969

# Rails Master Key (REQUIRED for production)
# Get this from config/master.key in your Rails app
RAILS_MASTER_KEY=your_actual_rails_master_key_from_config_master_key

# Secret Key Base (REQUIRED for production)
# Generate with: docker run --rm masterbaiter/jetchat-ruby_on_rails:latest bin/rails secret
SECRET_KEY_BASE=your_generated_secret_key_base_here

# Optional: Override default postgres password
# POSTGRES_PASSWORD=your_secure_password