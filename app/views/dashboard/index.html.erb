<div class="dashboard-container">
  <header class="dashboard-header">
    <h1>Welcome, <%= @current_user.name || @current_user.email %>!</h1>
    <p class="text-muted">Logged in as: <%= @current_user.email %></p>
  </header>

  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">👤</div>
      <div class="stat-content">
        <h3>Profile</h3>
        <p class="stat-value">🟢 Online</p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon">👥</div>
      <div class="stat-content">
        <h3>Friends</h3>
        <p class="stat-value"><%= @current_user.all_friends.count %></p>
      </div>
    </div>

    <div class="stat-card">
      <div class="stat-icon">📬</div>
      <div class="stat-content">
        <h3>Friend Requests</h3>
        <p class="stat-value">
          <%= @pending_friend_requests_count %>
          <% if @pending_friend_requests_count > 0 %>
            <span class="badge">New!</span>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <div class="actions-grid">
    <div class="action-card">
      <%= link_to discover_friends_path, class: "action-link" do %>
        <div class="action-icon">🔍</div>
        <h3>Discover People</h3>
        <p>Find and connect with new friends</p>
      <% end %>
    </div>

    <div class="action-card">
      <%= link_to friends_path, class: "action-link" do %>
        <div class="action-icon">👥</div>
        <h3>My Friends</h3>
        <p>View all your friends</p>
      <% end %>
    </div>

    <div class="action-card">
      <%= link_to chat_rooms_path, class: "action-link" do %>
        <div class="action-icon">💬</div>
        <h3>My Chats</h3>
        <p>View your conversations</p>
        <% if @unread_messages_count > 0 %>
          <span class="notification-badge" id="chat-notification-badge"><%= @unread_messages_count %></span>
        <% end %>
      <% end %>
    </div>

    <div class="action-card">
      <%= link_to friend_requests_path, class: "action-link" do %>
        <div class="action-icon">📬</div>
        <h3>Friend Requests</h3>
        <p>Manage pending requests</p>
        <% if @pending_friend_requests_count > 0 %>
          <span class="notification-badge"><%= @pending_friend_requests_count %></span>
        <% end %>
      <% end %>
    </div>

  </div>

  <% if @recent_friends.any? %>
    <section class="recent-friends">
      <h2>Recent Friends</h2>
      <div class="friends-list">
        <% @recent_friends.each do |friend| %>
          <div class="friend-card">
            <div class="friend-info">
              <h4><%= friend.name %></h4>
              <p class="text-muted"><%= friend.email %></p>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>

  <section class="user-details">
    <h2>User Information</h2>
    <div class="info-grid">
      <div class="info-item">
        <label>User ID (sub):</label>
        <span><%= @current_user.sub %></span>
      </div>
      <div class="info-item">
        <label>Email:</label>
        <span><%= @current_user.email %></span>
      </div>
      <div class="info-item">
        <label>Full Name:</label>
        <span><%= @current_user.name %></span>
      </div>
      <div class="info-item">
        <label>First Name:</label>
        <span><%= @current_user.first_name || "Not set" %></span>
      </div>
      <div class="info-item">
        <label>Last Name:</label>
        <span><%= @current_user.last_name || "Not set" %></span>
      </div>
    </div>
  </section>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Only initialize notifications channel on dashboard
    if (typeof ActionCable !== 'undefined') {
      const consumer = ActionCable.createConsumer();
      const notificationsChannel = consumer.subscriptions.create('NotificationsChannel', {
        received: function(data) {
          if (data.type === 'unread_messages_update') {
            updateChatNotificationBadge(data.unread_count);
          }
        }
      });
    }

    function updateChatNotificationBadge(unreadCount) {
      const chatCard = document.querySelector('.action-card a[href*="chat_rooms"]').parentElement;
      let badge = chatCard.querySelector('#chat-notification-badge');

      if (unreadCount > 0) {
        if (!badge) {
          // Create new badge if it doesn't exist
          badge = document.createElement('span');
          badge.className = 'notification-badge';
          badge.id = 'chat-notification-badge';
          chatCard.querySelector('.action-link').appendChild(badge);
        }
        badge.textContent = unreadCount;
        badge.style.display = 'flex';
      } else {
        // Hide badge if no unread messages
        if (badge) {
          badge.style.display = 'none';
        }
      }
    }

  });
</script>
