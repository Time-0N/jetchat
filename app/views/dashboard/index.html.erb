<div class="dashboard-container">
  <header class="dashboard-header">
    <h1>Welcome, <%= @current_user.name || @current_user.email %>!</h1>
    <p class="text-muted">Logged in as: <%= @current_user.email %></p>
  </header>

  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">ðŸ‘¤</div>
      <div class="stat-content">
        <h3>Profile Status</h3>
        <p class="stat-value">Active</p>
      </div>
    </div>
  </div>

  <section class="user-details">
    <h2>User Information</h2>
    <div class="info-grid">
      <div class="info-item">
        <label>User ID (sub):</label>
        <span><%= @current_user.sub %></span>
      </div>
      <div class="info-item">
        <label>Email:</label>
        <span><%= @current_user.email %></span>
      </div>
      <div class="info-item">
        <label>Full Name:</label>
        <span><%= @current_user.name %></span>
      </div>
      <div class="info-item">
        <label>First Name:</label>
        <span><%= @current_user.first_name || "Not set" %></span>
      </div>
      <div class="info-item">
        <label>Last Name:</label>
        <span><%= @current_user.last_name || "Not set" %></span>
      </div>
    </div>
  </section>
</div>